apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

helmCharts:
- name: cloud-provider-azure
  repo: https://raw.githubusercontent.com/kubernetes-sigs/cloud-provider-azure/master/helm/repo
  version: v1.31.1
  releaseName: cloud-provider-azure
  namespace: kube-system
  valuesFile: helm-values

patches:
  - patch: |-
      apiVersion: apps/v1
      kind: DaemonSet
      metadata:
        name: cloud-node-manager
        namespace: kube-system
      spec:
        template:
          spec:
            containers:
              - name: cloud-node-manager
                image: '{{ .InternalImages.Get "AzureCNM" }}'

  - patch: |-
      apiVersion: apps/v1
      kind: Deployment
      metadata:
        name: cloud-controller-manager
        namespace: kube-system
      spec:
        template:
          spec:
            containers:
              - name: cloud-controller-manager
                image: '{{ .InternalImages.Get "AzureCCM" }}'
                args:
                  - --allocate-node-cidrs=false
                  - --cloud-config=/etc/cloud/cloud-config
                  - --cloud-provider=azure
                  - --cluster-name={{ .Config.Name }}
                  - --configure-cloud-routes=false
                  - --controllers=*,-cloud-node
                  - --leader-elect=true
                  - --route-reconciliation-period=10s
                  - --secure-port=10268
                  - --v=2
                env:
                  - name: SSL_CERT_FILE
                    value: /usr/share/ca-certificates/ca-certificates.crt
                volumeMounts:
                  - name: cloud-config
                    mountPath: /etc/cloud
                    readOnly: true
            volumes:
              - name: cloud-config
                secret:
                  secretName: cloud-config

  - patch: |-
      apiVersion: apps/v1
      kind: DaemonSet
      metadata:
        name: cloud-node-manager-windows
        namespace: kube-system
      $patch: delete

  - patch: |-
      apiVersion: v1
      kind: ConfigMap
      metadata:
        name: cloud-provider-azure-scripts
        namespace: kube-system
      $patch: delete
