apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: kube-system

helmCharts:
- name: cilium
  repo: https://helm.cilium.io/
  version: 1.15.6
  releaseName: cilium
  namespace: kube-system
  valuesFile: helm-values

patches:
  - patch: |-
      apiVersion: v1
      kind: ConfigMap
      metadata:
        name: cilium-config
        namespace: kube-system
      $patch: delete
  - patch: |-
      apiVersion: batch/v1
      kind: Job
      metadata:
        name: hubble-generate-certs
        namespace: kube-system
      $patch: delete
  - patch: |-
      apiVersion: batch/v1
      kind: CronJob
      metadata:
        name: hubble-generate-certs
        namespace: kube-system
      $patch: delete

  # A hack, to compensate for the lack of ability to set .Capabilities when using helmCharts API.
  - target:
      group: policy
      version: v1beta1
      kind: PodDisruptionBudget
      name: cilium-operator
      namespace: kube-system
    patch: |-
      - op: replace
        path: /apiVersion
        value: policy/v1
  - patch: |-
      apiVersion: apps/v1
      kind: DaemonSet
      metadata:
        name: cilium
        namespace: kube-system
      spec:
        template:
          spec:
            containers:
              - name: cilium-agent
                image: '{{ .InternalImages.Get "Cilium" }}'
                env:
                  - name: KUBERNETES_SERVICE_HOST
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_HOST
                        optional: true
                  - name: KUBERNETES_SERVICE_PORT
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_PORT
                        optional: true
            initContainers:
              - name: config
                image: '{{ .InternalImages.Get "Cilium" }}'
                env:
                  - name: KUBERNETES_SERVICE_HOST
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_HOST
                        optional: true
                  - name: KUBERNETES_SERVICE_PORT
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_PORT
                        optional: true
              - name: mount-cgroup
                image: '{{ .InternalImages.Get "Cilium" }}'
              - name: apply-sysctl-overwrites
                image: '{{ .InternalImages.Get "Cilium" }}'
              - name: mount-bpf-fs
                image: '{{ .InternalImages.Get "Cilium" }}'
              - name: clean-cilium-state
                image: '{{ .InternalImages.Get "Cilium" }}'
                env:
                  - name: KUBERNETES_SERVICE_HOST
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_HOST
                        optional: true
                  - name: KUBERNETES_SERVICE_PORT
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_PORT
                        optional: true
              - name: install-cni-binaries
                image: '{{ .InternalImages.Get "Cilium" }}'
  - patch: |-
      apiVersion: apps/v1
      kind: Deployment
      metadata:
        name: cilium-operator
        namespace: kube-system
      spec:
        template:
          spec:
            containers:
              - name: cilium-operator
                image: '{{ .InternalImages.Get "CiliumOperator" }}'
                env:
                  - name: KUBERNETES_SERVICE_HOST
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_HOST
                        optional: true
                  - name: KUBERNETES_SERVICE_PORT
                    valueFrom:
                      configMapKeyRef:
                        name: cilium-config
                        key: KUBERNETES_SERVICE_PORT
                        optional: true
